#!/usr/bin/env bash

#MOVE IN THE DIRECTORY CONTAINING THE BLISS SCRIPT 
cd ../bin

#PREPARE THE PATTERN FILE 
bash prepare_pattern.sh ../test/samplesheet/test.csv

#MOVE THE PATTERN FILE IN THE PROPER DIRECTORY
mv TEST_DMSO_AGCCATCA ../patterns

#CREATE THE RUN FILE
bash prepare_run.sh ../test/samplesheet/test.csv TEST ../test/fastq

#EXECUTE THE RUN FILE
bash runs/run_pipeline_TEST.sh

#GO BACK TO ORIGINAL DIRECTORY
cd ../test

